generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" 
}

model Member {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique 
  loans Loan[]  
}

model Book {
  id     Int    @id @default(autoincrement())
  title  String
  author String
  copies Int    @default(1) 
  loans  Loan[] 
}

model Loan {
  id         Int       @id @default(autoincrement())
  loan_date  DateTime
  due_date   DateTime
  return_date DateTime? 

  member    Member @relation(fields: [member_id], references: [id])
  member_id Int    // Klucz obcy

  book    Book   @relation(fields: [book_id], references: [id])
  book_id Int    // Klucz obcy
}